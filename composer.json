{
    "name": "yii-tools/forms",
    "type": "library",
    "description": "Awesome Forms for YiiFramework v.3.0.",
    "keywords": [
        "yii-tools",
        "awesome",
        "forms",
        "yii3"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "foxy/foxy": "^1.2",
        "yii-tools/awesome-widget": "^1.0@dev",
        "yii-tools/filepond-asset": "^1.0@dev",
        "yii-tools/form-model": "^1.0@dev",
        "yii-tools/html": "^1.0@dev",
        "yii-tools/simplemde-asset": "^1.0@dev",
        "yiisoft/assets": "^3.0",
        "yiisoft/http": "^1.2",
        "yiisoft/strings": "^2.1",
        "yiisoft/translator": "^2.2",
        "yiisoft/translator-message-php": "^1.1",
        "yiisoft/view": "^7.0",
        "yiisoft/widget": "^2.0",
        "yiisoft/yii-event": "^1.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.28",
        "vimeo/psalm": "^5.6",
        "yii-tools/form-model": "^1.0@dev",
        "yii-tools/support": "^1.0@dev",
        "yiisoft/test-support": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Forms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Forms\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "params": "params.php",
            "common": [
                "common/*.php"
            ]
        },
        "foxy": true
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "foxy/foxy": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
